@model Todo01.Models.ViewModelBase

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link href="~/content/styles/site.css" rel="stylesheet" type="text/css" />
    <link href="~/content/styles/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/content/styles/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/content/scripts/jquery-3.1.1.min.js"></script>
    <script src="~/content/scripts/bootstrap.min.js"></script>
    <script src="~/content/scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/content/scripts/Todo01.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("index", "home")" class="navbar-brand">
                    <i class="fa fa-home"></i>
                    Home
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        
        <footer>
            <p>&copy; Dino Esposito @DateTime.Now.Year - "UX-driven Software Design" Pluralsight course</p>
        </footer>
    </div>

</body>
</html>